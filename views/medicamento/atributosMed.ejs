    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(2, 1fr);
            gap: 10px;
            height: 100vh;
            width: 100vw;
            box-sizing: border-box;
            padding: 10px;
        }

        .grid-item {
            border: 1px solid #ccc;
            padding: 10px;
            overflow: auto;
            background-size: cover;
            background-position: center;
            height: 100%;
            width: 100%;
            box-sizing: border-box;
            font-size: 0.8em;
            /* Reduce font size */
        }

        .grid-item table.dataTable {
            font-size: 1.0em;
            /* Reduce font size */
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.2em 0.5em;
            /* Reduce pagination button size */
        }

        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            height: 1.2em;
            /* Adjust input height */
            font-size: 0.8em;
            /* Adjust input font size */
        }

        .dataTables_wrapper .dataTables_info {
            font-size: 0.8em;
            /* Adjust info font size */
        }


        .grid-item {
            position: relative;
            background-size: cover;
            background-position: center;
            background-blend-mode: darken;
            /* Mezcla la imagen de fondo con el color */
            background-color: rgba(0, 0, 0, 0.5);
            /* Ajusta el color y la opacidad para atenuar */
        }


        .quadrant-1 {
            background-image: url('./img/forma_farma.PNG');
        }

        .quadrant-2 {
            background-image: url('./img/forma_farma1.PNG');
        }

        .quadrant-3 {
            background-image: url('./img/forma_farma2.PNG');
        }

        .quadrant-4 {
            background-image: url('./img/forma_farma3.PNG');

        }

        .quadrant-1 h4 {
            color: #77f0ee;
            /* Color para el primer cuadrante */
        }

        .quadrant-2 h4 {
            color: #77f0ee;
            /* Color para el segundo cuadrante */
        }

        .quadrant-3 h4 {
            color: #77f0ee;
            /* Color para el tercer cuadrante */
        }

        .quadrant-4 h4 {
            color: #77f0ee;
            /* Color para el cuarto cuadrante */
        }
    </style>

    <title>Document</title>
</head>

