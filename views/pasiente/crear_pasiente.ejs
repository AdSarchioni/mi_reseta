<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="../assets/js/color-modes.js"></script>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <style>
    .dt-center {
      text-align: center;
    }

    .inactive {
      opacity: 0.5;
      /* Reduce la opacidad para hacer la fila menos prominente */
    }
  </style>
  <title>Mi Reseta</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>



<body class="d-flex align-items-center py-60  bg-success-subtle">
  <div></div>
  <main class="form-signin w-100 m-4">

    <div>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="./img/pasiente.png" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Registrar Paciente</h5>
              <p class="card-text"> </p>
              <p class="card-text"><small class="text-body-secondary">si tiene dudas puede buscarse primero</small></p>
            </div>
          </div>
        </div>
      </div>

    </div>

    <form id="formLogin" class="row g-3 needs-validation" novalidate action="/guardar_pas" method="POST">



      </div>
      <div class="col-md-2">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required>

        <div class="valid-feedback">

        </div>
      </div>
      <div class="col-md-2">
        <label for="user" class="form-label">Apellido</label>
        <div class="input-group has-validation">

          <input type="text" class="form-control" id="apellido" name="apellido" inputGroupPrepend" required>
          <div class="invalid-feedback">

          </div>
        </div>
      </div>
      <div class="col-md">
        <label for="dni" class="form-label">Dni</label>
        <input type="text" class="form-control" id="dni" name="dni" required>
        <div class="invalid-feedback">

        </div>
      </div>
      <div class="col-md">
        <label for="fecha_nac" class="form-label">Fecha Nacimiento</label>
        <input type="date" class="form-control" id="fecha_nac" name="fecha_nac" required>
        <div class="invalid-feedback">

        </div>
      </div>
      <div class="col-md">
        <label for="rol" class="form-label">sexo</label>
        <select class="form-select" id="sexo" name="sexo" required>
          <option selected disabled value="">Elegir...</option>
          <option>Masculino</option>
          <option>Femenino</option>
          <option>No Binario</option>
        </select>
        <div class="invalid-feedback">
        </div>
      </div>
      <div class="col-md">
        <label for="rol" class="form-label">Alta</label>
        <select class="form-select" id="alta" name="alta" required>
          <option value=""> </option>
          <option>0</option>
          <option>1</option>

        </select>
        <div class="invalid-feedback">
        </div>
      </div>
      </div>

      <div class="col-md">
        <label for="tipo_obra" class="form-label">Obra Social</label>
        <input type="text" class="form-control" id="tipo_obra" name="tipo_obra" list="sugerenciasNombre_obra"
          autocomplete="off" required>
        <datalist id="sugerenciasNombre_obra"></datalist>
        <input type="hidden" id="id_plan" name="id_plan">
      </div>

      <div class="col-12">
        <button class="btn btn-success" type="submit">Guardar Paciente</button>
        <a type="button" href="/altaBorrado" class="btn btn-info">Alta Borrados</a>
        <a type="button" href="/" class="btn btn-warning">Volver</a>
        <a type="button" href="logout" class="btn btn-danger">Logout</a>
      </div>
    </form>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar Paciente</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body bg-body-secondary">
            <form id="formularioActualizar" method="POST">
              <div class="mb-3">
                <label for="nomEdit" class="col-form-label">Nombre</label>
                <input type="text" class="form-control" id="nomEdit" name="nomEdit">
              </div>
              <div class="mb-3">
                <label for="apellEdit" class="col-form-label">Apellido</label>
                <input type="text" class="form-control" id="apellEdit" name="apellEdit">
              </div>
              <div class="mb-3">
                <label for="dniEdit" class="col-form-label">Dni</label>
                <input type="text" class="form-control" id="dniEdit" name="dniEdit">
              </div>
              <div class="mb-3">
                <label for="fechaEdit" class="col-form-label">Fecha Nacimiento</label>
                <input type="date" class="form-control" id="fechaEdit" name="fechaEdit">
              </div>
              <div class="mb-3">
                <label for="sexoEdit" class="form-label">sexo</label>
                <select class="form-select" id="sexoEdit" name="sexoEdit" required>
                  <option selected disabled value="">Elegir...</option>
                  <option>Masculino</option>
                  <option>Femenino</option>
                  <option>No Binario</option>
                </select>
              </div>
              <div class="col-md">

                <label for="tipo_obraE" class="form-label">Obra Social</label>
                <input type="text" class="form-control" id="tipo_obraE" name="tipo_obraE" list="sugerenciasNombre_obraE"
                  autocomplete="off" required>
                <datalist id="sugerenciasNombre_obraE"></datalist>
                <input type="hidden" id="id_planE" name="id_planE">



              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar Modificacion</button>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>

    <div class="container">
      <table id="myTable" name="myTable" class="table table-striped" style="width:100%">

        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">APELLIDO</th>
            <th scope="col">DNI</th>
            <th scope="col">FECHA NAC</th>
            <th scope="col">SEXO</th>
            <th scope="col">ALTA</th>
            <th scope="col">PLAN OS</th>
            <th scope="col">OBRA SOCIAL</th>
            <th scope="col">MODIFICAR</th>
            <th scope="col">ELIMINAR</th>
          </tr>
        </thead>

        <tbody>

        </tbody>

      </table>
    </div>

  </main>












  <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
  <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
  <script src="./js/pasiente.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(alert){%>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>',
        timer: '<%= 3000 %>'
      }).then(() => {
        window.location = '/<%= ruta %>'
      })
    </script>
    <% } %>



</body>

</html>