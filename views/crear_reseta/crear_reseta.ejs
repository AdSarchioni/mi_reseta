<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>
    /* CSS personalizado para reducir el padding y margen */
    .table-sm td,
    .table-sm th {
      padding: 0.1rem;
      /* Reduce el padding aún más */
      white-space: nowrap;
      /* Evita que el texto se ajuste en varias líneas */
      text-align: center;
      /* Ajusta el texto a la izquierda */
    }

    .table-container {
      margin-bottom: 0.5rem;
      /* Reduce el margen inferior entre tablas */
    }

    /* CSS personalizado para reducir el padding y el margen */
    .form-control {
      padding: 0.25rem;
      /* Reduce el padding dentro de los campos de texto */
    }

    .btn {
      padding: 0.25rem 0.5rem;
      /* Reduce el padding del botón */
    }

    .row.g-4 {
      margin-top: 0.5rem;
      /* Reduce el margen superior del grupo de filas */
      margin-bottom: 0.5rem;
      /* Reduce el margen inferior del grupo de filas */
    }

    .col-sm {
      padding: 0.25rem;
      /* Reduce el padding de las columnas */
    }
    .id-med-input {
            width: 40px; /* Ajusta el tamaño según sea necesario */
        }

  </style>





</head>

<body>
  <h1>Crear Reseta</h1>
<h4>


</h4>

  <form action="/reseta_save" method="post">


    <div class="container" >
      <div class="p-3 mb-2 bg-primary-subtle text-primary-emphasis" >  
      <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed " type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" id="accordionButton1">
              Buscar Profesional
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse " data-bs-parent="">
            <div class="accordion-body">
              <div class="container">

                <div class="row g-4">
                  <div class="col-sm">
                    <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" name="nombre_prof" value="<%= data.nombre %>"
                      id="nombre_prof">
                  </div>
                  <div class="col-sm">
                    <input type="text" class="form-control" placeholder="Usuario" aria-label="user"value= "<%= data.user %>"
                      name="user" id="user">
                  </div>
                  <div class="col-sm">
                    <input type="text" class="form-control" placeholder="Dni" aria-label="dni_prof" name="dni_prof" value= "<%= data.dni %>"
                      id="dni_prof">

                  </div>


                  <div class="col-sm">
                    <button onclick="cargarProf()" type="button" class="btn btn-success w-100 py-2">Buscar
                      Profesional</button>
                  </div>
                </div>



                <div>
                  <table id="resultadosTabla1" class="table table-bordered table-dark table-sm table-hover">
                    <thead>
                      <tr class="bg-primary text-white">
                        <th scope="col">SEL</th>
                        <th scope="col">ID REFEPS</th>
                        <th scope="col">ID</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">APELLIDO</th>
                        <th scope="col">DNI</th>
                        <th scope="col">DIRECCION</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">MATRICULA</th>
                        <th scope="col">TELEFONO</th>
                        <th scope="col">ESPECIALIDAD</th>
                      </tr>
                    </thead>
                    <tbody>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>







 <!--////////////////////////////////////////////////////////////////////////////-->
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" id="pascienteButton">
           Buscar Pasciente
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="">
            <div class="accordion-body">
              <div class="container">
                <div class="row g-3">
                  <div class="col-sm">

                    <input type="text" class="form-control" placeholder="Nombre pasiente" aria-label="Nombre" name="nombre_pas"
                      id="nombre_pas"  list="sugerenciasNombre_pas" >
                      <datalist id="sugerenciasNombre_pas"></datalist>
                    </div>

                
                </div>
              </div>

              <div class="container" id="contenedorBusquedaPasientes" ></div>
            </div>
          </div>
        </div>
 <!--////////////////////////////////////////////////////////////////////////////-->
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
              aria-controls="panelsStayOpen-collapseTwo" id="diagnosticoButton">
              Diagnostico
            </button>
          </h2>
          <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
            <div class="accordion-body">
              <div class="mb-3">
                <label for="diagnostico" class="form-label">Diagnostico </label>
                <textarea class="form-control" id="diagnostico" rows="3" name="diagnostico"></textarea>
              </div>
            </div>
          </div>
        </div>


        <div class="accordion" id="accordionPanelsStayOpenExample">
          <!--////////////////////////////////////////////////////////////////////////////-->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseThree" id="accordionButtonPrestaciones">
                Buscar Prestación
              </button>
            </h2>
            <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
              <div class="accordion-body">
                <!-- Aquí se agregarán dinámicamente los campos de búsqueda de prestaciones -->
                <div class="row g-4">
                  <div class="col-auto">
                    <label for="cantidadPrestaciones" class="visually-hidden">Cantidad Prestaciones</label>
                    <input type="number" class="form-control" min="1" placeholder="Cant Prestaciones"
                      id="cantidadPrestaciones" name="cantidadPrestaciones">
                  </div>
                  <div class="col-auto">
                    <button type="button" class="btn btn-primary mb-3"
                      onclick="agregarCamposBusquedaPrestaciones()">Generar Campos</button>
                  </div>
                  <div class="container" id="contenedorBusquedaPrestaciones">
                    <!-- Aquí se agregarán dinámicamente los campos de búsqueda de prestaciones -->
                  </div>
                </div>
              </div>
            </div>
          </div>


          <!--////////////////////////////////////////////////////////////////////////////-->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseFour" id="accordionButtonMedicamentos">
                Buscar Medicamentos
              </button>
            </h2>
            <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse">
              <div class="accordion-body">
                <!-- Aquí se agregarán dinámicamente los campos de búsqueda de medicamentos -->
                <div class="row g-4">
                  <div class="col-auto">
                    <label for="cantidadMedicamentos" class="visually-hidden">Cantidad Medicamentos</label>
                    <input type="number" class="form-control" min="1" placeholder="Cant Medicamentos"
                      id="cantidadMedicamentos" name="cantidadMedicamentos">
                  </div>
                  <div class="col-auto">
                    <button type="button" class="btn btn-primary mb-3" onclick="agregarCamposBusqueda()">Generar
                      Campos</button>
                  </div>
                  <div class="container" id="contenedorBusquedaMedicamentos">
                    <!-- Aquí se agregarán dinámicamente los campos de búsqueda de medicamentos -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive"
              id="accordionButtonAdministracion">
              Buscar Administracion
            </button>
          </h2>
          <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="">
            <div class="accordion-body">

              <div class="row g-4">
                <div class="col-auto">
                  <label for="administrationCount" class="visually-hidden">Cantidad de administraciones</label>
                  <input type="number" class="form-control" min="1" id="administrationCount"
                    placeholder="Administraciones Medicamentos">
                </div>


                <div class="col-auto">
                  <button type="button" class="btn btn-success mb-3" id="btnGenerarCamposAdministracion">Generar
                    Administraciones Medicamentos</button>
                </div>
                <div id="inputsContainer"></div>

             
              </div>

            </div>
          </div>
        </div>
        <div>
          <div class="container">
            <p class="d-inline-flex gap-1">
              <a href="" type="button" class="btn btn-info w-100 py-2">Reseta</a>
              <a href="/logout" type="button" class="btn btn-danger w-100 py-2">Logout</a>
            </p>
          </div>

        </div>
        
        
        <button type="submit" class="btn btn-primary">Submit</button>
  
      </div>
      </form>










  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script src="./js/prueba.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
          
  <% if(alert){%>
  <script>
  Swal.fire({
    title:'<%= alertTitle %>',
    text: '<%= alertMessage %>',
    icon: '<%= alertIcon %>',
    showConfirmButton: '<%= showConfirmButton %>',
    timer: '<%= 3000 %>'
  }). then(()=> {
    window.location = '<%= ruta %>'
  })
  </script>
  <% } %>

</body>

</html>