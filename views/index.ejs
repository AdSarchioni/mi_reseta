<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Mi Reseta</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>


  <nav class="navbar navbar-expand-lg bg-warning-subtle">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Mi Reseta</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">
              <%= new Date().toLocaleDateString() %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Nombre : <%= typeof user !=='undefined' ? user.name :'###' %>, Rol :<%= typeof
                  user !=='undefined' ? user.rol :'Debe Loguearce Nuevamente' %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="p-3 mb-2  bg-success-subtle  text-primary-emphasis">

    <div class="container">
      <div class="row">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/pasiente.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Gestionar Pacientes</h5>
                <a href="/crea_pasiente" type="button" class="btn btn-outline-primary">Pacientes</a>
              </div>
              <p class="card-text"><small class="text-body-secondary">Profesional o Administrador</small></p>
            </div>
          </div>
        </div>

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/profesional.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Gestionar Profesional</h5>
                <a href="/profesional" class="btn btn-outline-primary">Profesionales</a>

              </div>
              <p class="card-text"><small class="text-body-secondary">Solo Administrador</small></p>
            </div>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/medi.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Gestionar Medicamentos</h5>
                <a href="/crea_medicamento" class="btn btn-outline-primary">Medicamentos</a>

              </div>
              <p class="card-text"><small class="text-body-secondary">Solo Admministrador</small></p>
            </div>
          </div>
        </div>

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/resetaB.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Gestionar Prescripciones</h5>
                <a href="/gestionReseta" class="btn btn-outline-primary">Prescripciones</a>

              </div>
              <p class="card-text"><small class="text-body-secondary">Profesional o Administrador</small></p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/usuario.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Logout</h5>
                <a href="/logout" class="btn btn-outline-danger">Logout</a>

              </div>
              <p class="card-text"><small class="text-body-secondary">Salida</small></p>
            </div>
          </div>
        </div>

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="./img/crear_prescrip.PNG" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">Crear Prescripcion</h5>
                <a href="/crea_reseta" class="btn btn-outline-success">Crear Prescripcion</a>

              </div>
              <p class="card-text"><small class="text-body-secondary">Solo Profesional</small></p>
            </div>
          </div>
        </div>

      </div>


      <div class="card text-bg-dark">
        <img src="./img/pastillas.PNG" class="card-img" alt="...">
        <div class="card-img-overlay">
          <h5 class="card-title">Mi Reseta </h5>
          <p class="card-text">La nueva experiencia en prescripciones medicas</p>
          <p class="card-text"><small></small></p>
        </div>
      </div>

    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(alert){%>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: showConfirmButton,
        timer: timer
      }).then(() => {
        window.location = '/<%= ruta %>'
      })
    </script>
    <% } %>
</body>

</html>