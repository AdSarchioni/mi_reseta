<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="../assets/js/color-modes.js"></script>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <style>
    .dt-center {
      text-align: center;
    }
  </style>
  <title>Mi Reseta</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>



<body class="d-flex align-items-center py-60  bg-success-subtle ">

  <main class="form-signin w-100 m-4">

    <div>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="./img/profesional.png" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Registrar Profesional</h5>
             
              <p class="card-text"><small class="text-body-secondary">nuevo profesional cree primero el refeps</small></p>
            </div>
          </div>
        </div>
      </div>

    </div>

    <form id="formLogin" class="row g-3 needs-validation" novalidate action="/guardar_prof" method="POST">

      <div class="row mb-3">
      <div class="col-md-2">
        <label for="id_refer" class="form-label">ID Refeps</label>
        <input type="text" class="form-control" id="refeps" name="refeps" list="sugerenciasRefe" autocomplete="off"
          required>
        <datalist id="sugerenciasRefe"></datalist>
        <input type="text" id="id_refer" name="id_refer"class="form-control" readonly ="true" >
        <div class="valid-feedback">

        </div>
      </div>

      <div class="col-md-2">
        <label for="tipo_esp" class="form-label">Especialidad</label>
        <input type="text" class="form-control" id="tipo_esp" name="tipo_esp" list="sugerenciasEspe" autocomplete="off"
          required>
        <datalist id="sugerenciasEspe"></datalist>
        <input type="text" id="id_especialidad" name="id_especialidad"class="form-control" readonly ="true" >
        <div class="valid-feedback">

        </div>
      </div>

      <div class="col-md-2">
        <label for="matricula" class="form-label">Matricula</label>
        <input type="text" class="form-control" id="matricula" name="matricula" required>
        <div class="valid-feedback">

        </div>

      </div>
   
    </div>
   
   
      <div class="col-md">
        <label for="name_prof" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre_prof" name="nombre_prof" required>
        <div class="valid-feedback">

        </div>
      </div>
      <div class="col-md">
        <label for="apellido_prof" class="form-label">Apellido</label>
        <div class="input-group has-validation">

          <input type="text" class="form-control" id="apellido_prof" name="apellido_prof" inputGroupPrepend" required>
          <div class="invalid-feedback">

          </div>
        </div>
      </div>
      <div class="col-md">
        <label for="dni_prof" class="form-label">Dni</label>
        <input type="text" class="form-control" id="dni_prof" name="dni_prof" required>
        <div class="invalid-feedback">

        </div>
      </div>


      </div>
      <div class="col-md">

        <label for="domicilio_prof" class="form-label">Domicilio</label>
        <input type="text" class="form-control" id="domicilio_prof" name="domicilio_prof" required>


      </div>

      <div class="col-md">

        <label for="mail_prof" class="form-label">Email</label>
        <input type="text" class="form-control" id="mail_prof" name="mail_prof" required>


      </div>

      <div class="col-md">

        <label for="tel_prof" class="form-label">Telefono</label>
        <input type="text" class="form-control" id="tel_prof" name="tel_prof" required>


      </div>






      <div class="col-12">
        <button class="btn btn-success" type="submit">Guardar Profesional</button>
        <a type="button" href="/" class="btn btn-warning">Volver</a>
        <a type="button" href="/especialidad" class="btn btn-dark">Crear Especialidad</a>
        <a type="button" href="/refeps" class="btn btn-info">Crear Refeps</a>
        <a type="button" href="/altaProf"class="btn btn-secondary">Alta Borrados</a>
        <a type="button" href="logout" class="btn btn-danger">Logout</a>


      </div>
    </form>





    <table id="myTable" name="myTable" class="table table-striped" style="width:100%">

      <thead>
        <tr class="bg-primary text-white">
          <th scope="col">Id</th>
          <th scope="col">Refeps</th>
          <th scope="col">Espec</th>
          <th scope="col">Mat</th>
          <th scope="col">Nomb</th>
          <th scope="col">Ape</th>
          <th scope="col">Dni</th>
          <th scope="col">Domic</th>
          <th scope="col">Email</th>
          <th scope="col">Tel</th>
          <th scope="col">Alta</th>
          <th scope="col">Modificar</th>
          <th scope="col">Eliminar</th>
        </tr>
      </thead>

      <tbody>

      </tbody>

    </table>


    <!-- modal cargar Profesional --     -->
    <div class="modal fade" id="profeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar profesional</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body bg-body-secondary">
            <form id="formularioActualizar" method="POST">
              <div class="col-md">
                <label for="refepsE" class="form-label">ID Refeps</label>
                <input type="text" class="form-control" id="refepsE" name="refeps" list="sugerenciasRefeE"
                  autocomplete="off" required>
                <datalist id="sugerenciasRefeE"></datalist>
                <input type="text" id="id_referE" name="id_refer" readonly ="true">
                <div class="valid-feedback">

                </div>
              </div>

              <div class="col-md">
                <label for="tipo_espE" class="form-label">Especialidad</label>
                <input type="text" class="form-control" id="tipo_espE" name="tipo_esp" list="sugerenciasEspeE"
                  autocomplete="off" required>
                <datalist id="sugerenciasEspeE"></datalist>
                <input type="text" id="id_especialidadE" name="id_especialidad" readonly ="true" >
                <div class="valid-feedback">

                </div>
              </div>
              <div class="col-md">
                <label for="matriculaE" class="form-label">Matricula</label>
                <input type="text" class="form-control" id="matriculaE" name="matricula" required>
                <div class="valid-feedback">

                </div>

              </div>
              <div class="col-md">
                <label for="name_profE" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombre_profE" name="nombre_prof" required>
                <div class="valid-feedback">

                </div>
              </div>
              <div class="col-md">
                <label for="apellido_profE" class="form-label">Apellido</label>
                <div class="input-group has-validation">

                  <input type="text" class="form-control" id="apellido_profE" name="apellido_prof" inputGroupPrepend"
                    required>
                  <div class="invalid-feedback">

                  </div>
                </div>
              </div>
              <div class="col-md">
                <label for="dni_profE" class="form-label">Dni</label>
                <input type="text" class="form-control" id="dni_profE" name="dni_prof" required>
                <div class="invalid-feedback">

                </div>
              </div>



              <div class="col-md">

                <label for="domicilio_profE" class="form-label">Domicilio</label>
                <input type="text" class="form-control" id="domicilio_profE" name="domicilio_prof" required>


              </div>

              <div class="col-md">

                <label for="mail_profE" class="form-label">Email</label>
                <input type="text" class="form-control" id="mail_profE" name="mail_prof" required>


              </div>

              <div class="col-md">

                <label for="tel_profE" class="form-label">Telefono</label>
                <input type="text" class="form-control" id="tel_profE" name="tel_prof" required>

              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Modificar Profesional</button>
          </div>

          </form>
        </div>

      </div>
    </div>
    </div>








  </main>


  <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
  <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
  <script src="./js/profesional.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(alert){%>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>',
        timer: '<%= 3000 %>'
      }).then(() => {
        window.location = '/<%= ruta %>'
      })
    </script>
    <% } %>



</body>

</html>